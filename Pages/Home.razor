@page "/"
@using CRMSystem.Services
@inject ICosmosDbService CosmosDbService

<PageTitle>CRM 客戶管理系統</PageTitle>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white p-5 rounded mb-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <h1 class="display-4">歡迎使用 CRM 客戶管理系統</h1>
                <p class="lead">專為金融服務團隊打造的客戶關係管理平台</p>
                <hr class="my-4" style="border-color: rgba(255,255,255,0.3);">
                <p>支援多人協作編輯，完整記錄客戶資料、投資狀況及拜訪紀錄</p>
                <a class="btn btn-light btn-lg" href="/customers" role="button">
                    <i class="bi bi-people-fill"></i> 開始管理客戶
                </a>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-people-fill" style="font-size: 3rem; color: #007bff;"></i>
                    <h5 class="card-title mt-3">客戶管理</h5>
                    <p class="card-text">完整記錄客戶基本資料、聯絡方式及背景資訊</p>
                    <a href="/customers" class="btn btn-primary">查看客戶</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-graph-up" style="font-size: 3rem; color: #28a745;"></i>
                    <h5 class="card-title mt-3">投資記錄</h5>
                    <p class="card-text">追蹤客戶投資組合、基金狀況及損益分析</p>
                    <a href="/customers" class="btn btn-success">管理投資</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-calendar-check" style="font-size: 3rem; color: #ffc107;"></i>
                    <h5 class="card-title mt-3">拜訪記錄</h5>
                    <p class="card-text">記錄客戶拜訪歷程及後續追蹤事項</p>
                    <a href="/customers" class="btn btn-warning">查看記錄</a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-person-plus" style="font-size: 3rem; color: #17a2b8;"></i>
                    <h5 class="card-title mt-3">新增客戶</h5>
                    <p class="card-text">快速建立新客戶檔案並開始管理</p>
                    <a href="/customers/create" class="btn btn-info">新增客戶</a>
                </div>
            </div>
        </div>
    </div>

    @if (stats != null)
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="bi bi-bar-chart"></i> 系統統計</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="border-end">
                                    <h3 class="text-primary">@stats.TotalCustomers</h3>
                                    <p class="text-muted">總客戶數</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border-end">
                                    <h3 class="text-success">@stats.TotalInvestmentRecords</h3>
                                    <p class="text-muted">投資記錄數</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="border-end">
                                    <h3 class="text-warning">@stats.TotalVisitRecords</h3>
                                    <p class="text-muted">拜訪記錄數</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <h3 class="text-info">@stats.NewCustomersThisMonth</h3>
                                <p class="text-muted">本月新客戶</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private SystemStats? stats;

    protected override async Task OnInitializedAsync()
    {
        await LoadSystemStats();
    }

    private async Task LoadSystemStats()
    {
        try
        {
            var customers = await CosmosDbService.GetCustomersAsync();
            stats = new SystemStats
            {
                TotalCustomers = customers.Count(),
                TotalInvestmentRecords = customers.SelectMany(c => c.InvestmentRecords).Count(),
                TotalVisitRecords = customers.SelectMany(c => c.VisitRecords).Count(),
                NewCustomersThisMonth = customers.Count(c => c.CreatedDate >= new DateTime(DateTime.Now.Year, DateTime.Now.Month, 1))
            };
        }
        catch (Exception ex)
        {
            Console.WriteLine($"載入系統統計資料時發生錯誤: {ex.Message}");
            // 設定預設值
            stats = new SystemStats();
        }
    }

    public class SystemStats
    {
        public int TotalCustomers { get; set; }
        public int TotalInvestmentRecords { get; set; }
        public int TotalVisitRecords { get; set; }
        public int NewCustomersThisMonth { get; set; }
    }
}
